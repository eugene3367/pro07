<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="work">
	<!-- 공지사항 목록 -->
	<select id="boardList" resultType="kr.go.msit.dto.WorkDTO">
		select * from board2 order by regdate desc
	</select>
	<!-- 글 상세보기 -->
	<select id="boardDetail" resultType="kr.go.msit.dto.WorkDTO">
		select * from board2 where seq=#{seq}
	</select>
	<!-- 글 수 카운트 -->
	<select id="totalCount" resultType="integer" >
		select count(*) from board2
	</select>

	<insert id="boardInsert">
		insert into board2 values ((select ifnull(max(seq), 0)+1 from board a), #{title}, #{content}, 'admin', now(), 0)
	</insert>
	<delete id="boardDelete">
		delete from board2 where seq=#{seq}
	</delete>
	<update id="boardEdit">
		update board2 set title=#{title}, content=#{content} where seq=#{seq}
	</update>
	<update id="countUp">
		update board2 set visited=visited+1 where seq=#{seq}
	</update>

</mapper>