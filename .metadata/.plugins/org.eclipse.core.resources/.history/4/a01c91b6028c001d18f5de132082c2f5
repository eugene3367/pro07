package kr.go.msit.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import kr.go.msit.dto.Work2DTO;
import kr.go.msit.model.BoardDAO2;

@Service
public class BoardService2Impl implements BoardService2{
	
	@Autowired
	private BoardDAO2 boardDAO2;

	@Override
	public List<Work2DTO> boardList() throws Exception {
		return boardDAO2.boardList();
	}
	
	@Override
	public Work2DTO boardDetail(int seq) throws Exception {
		return boardDAO2.boardDetail(seq);
	}
	
	public void boardInsert(Work2DTO dto) throws Exception {
		boardDAO2.boardInsert(dto);
	}
	
	@Override
	public void boardDelete(int seq) throws Exception {
		boardDAO2.boardDelete(seq);
	}
	
	@Override
	public void boardEdit(Work2DTO dto) throws Exception {
		boardDAO2.boardEdit(dto);
	}

}
