package kr.go.msit.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import kr.go.msit.dto.WorkDTO;
import kr.go.msit.model.WorkDAO;

@Service
public class BoardService2Impl implements WorkService{
	
	@Autowired
	private WorkDAO boardDAO2;

	@Override
	public List<WorkDTO> boardList() throws Exception {
		return boardDAO2.boardList();
	}
	
	@Override
	public WorkDTO boardDetail(int seq) throws Exception {
		return boardDAO2.boardDetail(seq);
	}
	
	public void boardInsert(WorkDTO dto) throws Exception {
		boardDAO2.boardInsert(dto);
	}
	
	@Override
	public void boardDelete(int seq) throws Exception {
		boardDAO2.boardDelete(seq);
	}
	
	@Override
	public void boardEdit(WorkDTO dto) throws Exception {
		boardDAO2.boardEdit(dto);
	}

}
